@model Employee
@{
    var departments = new SelectList(ViewData["department"] as IEnumerable<Department>, nameof(Department.Id), nameof(Department.Name));
}

<h1>Create Page</h1>
<br />
<br />

<form asp-action="Create">



    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Age" class="col-form-label"></label>
        <input asp-for="@Model.Age" type="text" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>


     <div class="form-group">
        <label asp-for="@Model.Address"  class="col-form-label"></label>
        <input asp-for="@Model.Address" type="text" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
        <input asp-for="@Model.PhoneNumber" type="text" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Salary" class="col-form-label"></label>
        <input asp-for="@Model.Salary" type="text" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Email" class="col-form-label"></label>
        <input asp-for="@Model.Email" type="text" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.HiringDate" class="col-form-label"></label>
        <input asp-for="@Model.HiringDate" type="text" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Workfor" class="col-form-label"></label>
        
        <select asp-for="@Model.WorkforId" asp-items="departments" class="form-control">
            <option value ="@null">-- Select Department --</option>
        </select>

    </div>

    <div class="form-group">
        <label asp-for="@Model.IsActive" class="form-check"></label>
        <input asp-for="@Model.IsActive" class="form-check" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>

    <br />
    <br />

    <input type="submit" value="Create" class="btn btn-primary" />
    <a href="Index">Back to Create</a>




</form>

@section Hamada {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}

