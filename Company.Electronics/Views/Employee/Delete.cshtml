@model Employee
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Employee</h1>

<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" type="text" class="form-control" readonly />

    </div>


    <div class="form-group">
        <label asp-for="@Model.Age" class="col-form-label"></label>
        <input asp-for="@Model.Age" type="text" class="form-control" readonly />

    </div>


    <div class="form-group">
        <label asp-for="@Model.Address" class="col-form-label"></label>
        <input asp-for="@Model.Address" type="text" class="form-control" readonly />
    </div>


    <div class="form-group">
        <label asp-for="@Model.PhoneNumber" class="col-form-label"></label>
        <input asp-for="@Model.PhoneNumber" type="text" class="form-control" readonly />

    </div>


    <div class="form-group">
        <label asp-for="@Model.Salary" class="col-form-label"></label>
        <input asp-for="@Model.Salary" type="text" class="form-control" readonly />
    </div>


    <div class="form-group">
        <label asp-for="@Model.Email" class="col-form-label"></label>
        <input asp-for="@Model.Email" type="text" class="form-control" readonly />
    </div>


    <div class="form-group">
        <label asp-for="@Model.HiringDate" class="col-form-label"></label>
        <input asp-for="@Model.HiringDate" type="text" class="form-control" readonly />
    </div>


    <div class="form-group">
        <label asp-for="@Model.IsActive" class="form-check"></label>
        <input asp-for="@Model.IsActive" class="form-check" readonly />
    </div>

    <br />
    <br />

    <a asp-asp-controller="Employee" asp-action="Delete" asp-all-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    <a asp-asp-controller="Employee" asp-action="Index" class="btn btn-warning">Back to List</a>


</form>