@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create Page</h1>
<br />
<br />

<form asp-action="Create">

    <div class="form-group">
        <label asp-for="@Model.Code" class="col-form-label"></label>
        <input asp-for="@Model.Code" type="text" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="@Model.Name" class="col-form-label"></label>
        <input asp-for="@Model.Name" type="text" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


     <div class="form-group">
        <label asp-for="@Model.DateOfCreation"  class="col-form-label">Date Of Creation</label>
        <input asp-for="@Model.DateOfCreation" type="text" class="form-control" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div> 

    <br />
    <br />

    <input type="submit" value="Create" class="btn btn-primary" />
    <a href="Index">Back to Create</a>

</form>

@section Hamada{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


}